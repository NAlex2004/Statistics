@model Statistics.Models.ErrorViewModel

@{
    ViewBag.Title = "Error";
}

<h2>Some errors occured..</h2>

<div class="alert alert-danger">
    @if (Model != null)
    {
        <ul class="list-group">
            @foreach (var error in Model.Errors)
            {
                <li class="list-group-item alert-danger">@error</li>   
            }
        </ul>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href=@Model.ReturnUrl class="btn btn-primary">Return</a>              
            </div>
        </div>
    }
</div>

