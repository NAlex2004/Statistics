@model Statistics.Models.ErrorViewModel

@{
    ViewBag.Title = "Error";
}

<h2>Some errors occured..</h2>

<div class="alert alert-danger">
    @if (Model != null)
    {
        <ul class="list-group">
            @foreach (var error in Model.Errors)
            {
                <li class="list-group-item alert-danger">@error</li>   
            }
        </ul>
        <br />
        <div class="form-group">
                <a id="returnUrl" href=@Model.ReturnUrl class="btn btn-primary">Return</a>              
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#returnUrl").click(function (o) {
            o.preventDefault();
            $("#@Model.UpdateTargetId").html("");
        });
    })
</script>
