@model Statistics.Models.UsersFilterModel

@{
    ViewBag.Title = "Users";

    AjaxOptions opt = new AjaxOptions()
    {
        UpdateTargetId = "users",
        Url = "UsersData",
        HttpMethod = "POST"
    };
}

<h2>Users</h2>

    @using (Ajax.BeginForm(opt))
    { 
        <div class="row">
         
            <label class = "control-label col-md-2">Filter by UserName:</label>
            <div class="col-md-3">
                @Html.HiddenFor(m => m.Page)
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })                
            </div>            
            <div class="col-md-1">
                <button type="submit" class="btn btn-default">Ok</button>
            </div>
        
        </div>
    }

<br />
<hr />
<div class="item">
    @Html.ActionLink("Create user", "CreateUser")
</div>

<div id="users">
    @Html.Action("UsersData", Model)
</div>
